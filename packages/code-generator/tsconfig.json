{
  "extends": "../../tsconfig.package.json",
  "compilerOptions": {
    "outDir": "./lib",
    "declarationDir": "./lib/",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "target": "es6",
    "noUnusedParameters": false,
    "noUnusedLocals": false
  },
  "include": [
    "src/**/*"
  ]
}